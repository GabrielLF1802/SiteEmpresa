<main class="grid grid-cols-1 mx-auto w-full bg-gray-700">
    
        {{#if erros}}
        <div class="bg-gray-700 w-full grid grid-cols-1 justify-items-center justify-center items-center mx-auto">
            {{#each erros}}
            <div class="py-1">
                <div class="bg-red-500 text-white px-2 py-1 rounded-lg shadow-lg flex items-center justify-between w-60">
                    <p class="">{{texto}}</p>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
    <div class=" flex flex-grow h-screen min-h-screen items-center justify-center px-4 bg-gray-700 sm:px-6 lg:px-8 ">
    
        <div class="bg-gray-500 p-4 h-full w-[35%] space-y-4 sm:space-y-1">
            <div>
                <h1 class="text-center pt-4 text-3xl font-medium font-serif">Registre-se</h1>
            </div>
            <form action="/user/register" method="POST" class="space-y-8">
                <div class=" ">
                    <label for="nome" class="text-md">Nome:</label>
                    <input type="text" id="nome" name="nome" class="w-full px-2 py-3 font-mono font-normal bg-gray-300 focus:bg-slate-400 focus:shadow-xl/20 rounded-md">
                </div>
                <div class="">
                    <label for="email">Email:</label>
                    <input type="text" id="email" name="email" class="w-full px-2 py-3 bg-gray-300 font-mono font-normal focus:bg-slate-400 focus:shadow-xl/20 rounded-md">
                </div>
                <div class="">
                    <label for="nasc">Nascimento:</label>
                    <input type="date" id="nasc" name="nasc" class="w-full px-2 py-3 bg-gray-300 font-mono font-normal focus:bg-slate-400 focus:shadow-xl/20 rounded-md">
                </div>
                <div class="">
                    <label for="senha">Senha:</label>
                    <input type="password" id="senha" name="senha" class="w-full px-2 py-3 bg-gray-300 font-mono font-normal focus:bg-slate-400 focus:shadow-xl/20 rounded-md">
                </div>
                <div class="">
                    <label for="senha2" class="">Confirme a sua senha:</label>
                    <input type="passowrd" name="senha2" class="w-full px-2 py-3 bg-gray-300 font-mono font-normal focus:bg-slate-400 focus:shadow-xl/20 rounded-md">
                </div>
                <div class="flex justify-center items-center">
                    <div class="flex justify-center items-center">
                        <button type="submit" class="text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Register</button>
                    </div>
                    <div class="flex justify-center items-center">
                        <a href="/user/"><button type="button" class="text-gray-900 bg-gradient-to-r from-teal-200 to-lime-200 hover:bg-gradient-to-l hover:from-teal-200 hover:to-lime-200 focus:ring-4 focus:outline-none focus:ring-lime-200 dark:focus:ring-teal-700 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Home</button></a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>
