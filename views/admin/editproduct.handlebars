<h1>EDIT PRODUCT</h1>

<form action="/admin/products/edit" method="POST">
<input type="text" name="id" value="{{product._id}}">
    <main>
        <div>
            <input type="text" name="nome" value="{{product.nome}}">
            <label for="nome">Nome do produto:</label>
        </div>
        <div>
            <input type="text" id="valor" name="valor" value="{{product.valor}}">
            <label for="preco">Valor do produto:</label>
        </div>
        <div>
            <textarea name="desc">{{product.desc}}</textarea>
            <label for="">Descrição:</label>
        </div>
        <div>
            <input type="number" name="quant" value="{{product.quant}}">
            <label for="quant">Quantidade em estoque:</label>
        </div>
        <div>
            <img src="" alt="">
        </div>
        <button>Salvar</button>
    </main>


</form>
<a href="/admin/products"><button>Lista de Produtos</button></a>
<script>
    document.getElementById('valor').addEventListener('input',function(e){
    let valor= e.target.value.replace(/\D/g, '')

    valor= (valor/100).toFixed(2)+''
    valor= valor.replace('.',',')
    valor= valor.replace(/\B(?=(\d{3})+(?!\d))/g, '.')
    e.target.value= valor
})
</script>